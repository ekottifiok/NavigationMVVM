<UserControl x:Class="AmazingNavigation2.MVVM.Views.PeersListingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AmazingNavigation2.MVVM.Views"
             mc:Ignorable="d" Background="Chocolate"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ListView Margin="0 20 0 0" 
                  ItemsSource="{Binding PeopleList}">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding DeviceName}"
                                    Header="Device Name" />
                    <GridViewColumn DisplayMemberBinding="{Binding IpAddress}"
                                    Header="IP Address" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
